DATABASE_URL=mongodb+srv://user:password@cluster.mongodb.net/shopit?appName=ShopIt

# API Configuration
API_PREFIX=api/v1
API_PORT=3001
PORT=3001  # Used by Render

# CORS
CORS_ORIGIN=http://localhost:3000

# Environment
NODE_ENV=development

# JWT Configuration (Long-lived sessions)
JWT_SECRET=your-jwt-secret-key
JWT_ACCESS_SECRET=your-access-secret-key
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_SESSION_SECRET=your-session-secret-key
JWT_EXPIRES_IN=1h

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/google/callback

# Frontend URL (for OAuth redirects)
CORS_ORIGIN=http://localhost:3000

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=eu-north-1
AWS_S3_BUCKET=your-s3-bucket-name

# ================================
# Payment Configuration
# ================================
# Set to 'true' to skip real payment processing (for dev/test environments)
# When enabled, orders are automatically marked as paid without BOG processing
# Default: false (real payments required) - safer for production
SKIP_PAYMENT=false

# ================================
# BOG Payment Gateway (Customer Payments)
# ================================
# For processing customer checkout payments via BOG IPay
BOG_CLIENT_ID=your-bog-client-id
BOG_CLIENT_SECRET=your-bog-client-secret
BOG_CALLBACK_URL=https://yourdomain.com/api/v1/payments/callback

# ================================
# BOG Webhook Security
# ================================
# Set to 'true' to disable webhook signature verification (DEVELOPMENT ONLY!)
# In production, BOG callbacks are verified using RSA signature with BOG's public key
# WARNING: Never set this to 'true' in production - attackers could forge payments!
BOG_SKIP_WEBHOOK_SECURITY=false

# ================================
# BOG Company Account Details
# ================================
BOG_COMPANY_IBAN=GE00BG0000000000000000
BOG_API_URL=https://api.businessonline.ge/api
BOG_RTGS_CODE=BAGAGE22
BOG_REDIRECT_URI=https://yourdomain.com/api/v1/admin/bog/auth/callback

# ================================
# BOG Business Online - Admin Panel (OAuth2 - View Only)
# ================================
# For admin dashboard: viewing accounts, balances, document status
BOG_BONLINE_CLIENT_ID=your-bog-bonline-client-id
BOG_BONLINE_CLIENT_SECRET=your-bog-bonline-client-secret

# ================================
# BOG Business Online - Withdrawal (Client Credentials - Sign Permissions)
# ================================
# For actual money transfers to sellers
BOG_WITHDRAWAL_CLIENT_ID=your-bog-withdrawal-client-id
BOG_WITHDRAWAL_CLIENT_SECRET=your-bog-withdrawal-client-secret

# ================================
# Email (for order notifications)
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# ================================
# Cookie Configuration (Cross-Subdomain Auth)
# ================================
# Set to .shopit.ge in production for cookie sharing across subdomains
# Set to .localhost for local development (may not work in all browsers)
# COOKIE_DOMAIN=.shopit.ge
# COOKIE_SAME_SITE=lax
