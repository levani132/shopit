DATABASE_URL=mongodb+srv://user:password@cluster.mongodb.net/shopit?appName=ShopIt

# API Configuration
API_PREFIX=api/v1
API_PORT=3001
PORT=3001  # Used by Render

# CORS
CORS_ORIGIN=http://localhost:3000

# Environment
NODE_ENV=development

# JWT Configuration (Long-lived sessions)
JWT_SECRET=your-jwt-secret-key
JWT_ACCESS_SECRET=your-access-secret-key
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_SESSION_SECRET=your-session-secret-key
JWT_EXPIRES_IN=1h

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/google/callback

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:3000

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=eu-north-1
AWS_S3_BUCKET=your-s3-bucket-name

# ================================
# BOG Payment Gateway (Customer Payments)
# ================================
# For processing customer checkout payments via BOG IPay
BOG_CLIENT_ID=your_bog_ipay_client_id
BOG_CLIENT_SECRET=your_bog_ipay_client_secret
BOG_CALLBACK_URL=https://yourdomain.com/api/v1/payments/callback

# ================================
# BOG Business Online - Admin Panel (OAuth2 - View Only)
# ================================
# For admin dashboard: viewing accounts, balances, document status
# Create a separate BOG Business Online app with VIEW permissions
BOG_BONLINE_CLIENT_ID=your_bog_bonline_client_id
BOG_BONLINE_CLIENT_SECRET=your_bog_bonline_client_secret
BOG_REDIRECT_URI=https://yourdomain.com/api/v1/admin/bog/auth/callback

# ================================
# BOG Business Online - Withdrawal (Client Credentials - Sign Permissions)
# ================================
# For actual money transfers to sellers
# Create a separate BOG Business Online app with SIGN permissions
BOG_WITHDRAWAL_CLIENT_ID=your_bog_withdrawal_client_id
BOG_WITHDRAWAL_CLIENT_SECRET=your_bog_withdrawal_client_secret

# ================================
# BOG Company Account Details
# ================================
# Your company's bank account for withdrawals
BOG_COMPANY_IBAN=GE00BG0000000000000000
BOG_API_URL=https://api.businessonline.ge/api
BOG_RTGS_CODE=BAGAGE22

# ================================
# Email (for order notifications)
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@yourdomain.com
