# Backend Environment Variables
# Copy this file to .env for local development

# MongoDB Connection String
# Get this from MongoDB Atlas or your MongoDB provider
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/?appName=ShopIt

# API Configuration
API_PREFIX=api/v1
API_PORT=3001
PORT=3001

# CORS Configuration
# For production, set this to your frontend domain (e.g., https://your-app.vercel.app)
# For local development, use http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Node Environment
NODE_ENV=production
