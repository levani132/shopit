# ================================
# Database (MongoDB)
# ================================
DATABASE_URL=mongodb://shopit:shopit@localhost:27017/shopit?authSource=admin

# ================================
# JWT
# ================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# ================================
# API Configuration
# ================================
API_PORT=3001
API_PREFIX=api/v1

# ================================
# Frontend Configuration
# ================================
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=ShopIt

# ================================
# File Storage (S3-compatible)
# ================================
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET=shopit
STORAGE_REGION=us-east-1

# ================================
# Redis (optional, for caching)
# ================================
REDIS_URL=redis://localhost:6379

# ================================
# Environment
# ================================
NODE_ENV=development

# ================================
# Delivery Fee Calculation (OpenRouteService)
# ================================
# Free tier: 2000 requests/day
# Get your key at: https://openrouteservice.org/dev/#/signup
OPENROUTE_API_KEY=your-openrouteservice-api-key
